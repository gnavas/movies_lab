<%= render "shared/navbar" %>
<div class="container-fluid">
  <br><Br>
  <h2 class = "text-center">Movies:</h2>
  <br>

  <!-- <table style = "border: 1px solid black; border-collapse: collapse"> -->
  <div class="row">
    <div class ="col-md-10 col-md-offset-1">
      <table class ="table table-striped">
        <tr>
          <th>Title</th>
          <th>Year</th>
          <th>Info</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% @movies.each do |movie| %>
        <tr >
          <td ><%=movie.title  %></td>
          <td ><%= movie.year %></td>
          <td><%= link_to('Info', movie_path(movie), {class: "btn-xs btn-info"})%></td>
          <td><%= link_to('Edit', edit_movie_path(movie), {class: "btn-xs btn-info"})%></td>
          <td><%= link_to('Delete',movie_path(movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-xs btn-danger")%></td>
        </tr>
        <%end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class ="col-md-2 col-md-offset-1">
      <%=  link_to('Add new ', new_movie_path, {class: "btn btn-primary"}) %>
    </div>
    <div class ="col-md-2 col-md-offset-1">
      <%=  link_to('See Actors', actors_path, {class: "btn btn-primary"}) %>
    </div>
  </div>